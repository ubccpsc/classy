{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "lib": [
            "es7",
            "es2017.object",
            "dom"
        ],
        "typeRoots": [
            "../../node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "@common/*": [
                "./src/*",
                "./test/*"
            ],
            "@backend/*": [
                "../portal/backend/src/*"
            ],
            "@autotest/*": [
                "../autotest/src/*"
            ]
        }
    },
    "include": [
        "./src/**/*.ts",
        "./test/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
