{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@frontend/*": [
                "packages/portal/frontend/src/app/*"
            ],
            "@common/*": [
                "packages/common/*"
            ]
        },
        "lib": [
            "es7",
            "es2017.object",
            "es2018.AsyncIterable",
            "dom"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "../plugin/src/backend/**/*.ts",
        "packages"
    ]
}
